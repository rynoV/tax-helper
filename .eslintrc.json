{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "indent": [
          1,
          2,
          { "VariableDeclarator": { "var": 2, "let": 2, "const": 3 } }
        ],
        "linebreak-style": [1, "unix"],
        "quotes": [1, "single"],
        "semi": [1, "never"],
        "react/jsx-uses-vars": 1,
        "react/jsx-uses-react": 1,
        "react-hooks/rules-of-hooks": "error",
        "no-console": "off"
    }
}
